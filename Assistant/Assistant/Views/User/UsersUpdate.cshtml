@model UsersUpdateViewModel
@{
    ViewBag.Title = "User Update";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@section HeaderSection {
    <link href="~/Content/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/plugins/popover/popover.css" rel="stylesheet" />
    <link href="~/Content/plugins/loader/loader.css" rel="stylesheet" />
    <link href="~/Content/plugins/toastr/toastr.min.css" rel="stylesheet" />
}

@section Breadcramps {
    <ol class="breadcrumb">
        <li><a href="@Model.UsersUrl"><i class="fa fa-users"></i> Users</a></li>
        <li class="active">@Model.FullName</li>
    </ol>
}

<div class="box">
    <div class="box-header with-border">
        <button id="save-new-user" class="btn btn-success"><i class="fa fa-floppy-o"></i> Save</button>

        <div class="box-tools pull-right">

        </div>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="first-name">First name</label>
                    <input type="text" class="form-control" id="first-name" value="@Model.FirstName" placeholder="Enter first name">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="last-name">Last name</label>
                    <input type="text" class="form-control" id="last-name" value="@Model.LastName" placeholder="Enter last name">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label>Avatar</label>
                <div class="input-group image-preview">
                    <input type="text" class="form-control image-preview-filename" disabled="disabled">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-default image-preview-clear" id="clear-avatar" style="display: none;">
                            <span class="glyphicon glyphicon-remove"></span> Clear
                        </button>
                        <span class="btn btn-default image-preview-input">
                            <span class="glyphicon glyphicon-folder-open"></span>
                            <span class="image-preview-input-title">Browse</span>
                            <input type="file" accept="image/png, image/jpeg, image/gif" id="avatar" name="input-file-preview" />
                        </span>
                    </span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="birth-date">Birth date</label>
                            <input type="text" class="form-control apply-date-picker" value="@Model.BirthDate" id="birth-date" placeholder="Enter birth date">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="budget">Budget (₾)</label>
                            <input type="text" class="form-control apply-numeric-input" value="@Model.Budget" id="budget" placeholder="Enter budget">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section FooterSection {
    <script>
        var hasAvatar = "@Model.HasAvatar";
        var avatarBase64 = "@Model.Avatar";
        var saveUrl = "@Model.SaveUrl";
        var usersUrl = "@Model.UsersUrl";
    </script>
    <script src="~/Content/plugins/loader/loader.js"></script>
    <script src="~/Content/plugins/popover/popover.js"></script>
    <script src="~/Content/plugins/jQuery/jquery.numeric-input.js"></script>
    <script src="~/Content/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Content/plugins/toastr/toastr.min.js"></script>
    <script src="~/Content/plugins/toastr/toastrNotification.js"></script>
    <script src="~/Content/scripts/Users/UsersUpdate.js"></script>
}
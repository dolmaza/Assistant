@model UsersViewModel
@{
    ViewBag.Title = "Users";
}

@section HeaderSection {
    <link href="~/Content/plugins/dataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}


@section Breadcramps {
    <ol class="breadcrumb">
        <li class="active"><i class="fa fa-users"></i> Users</li>
    </ol>
}

<div class="box">
    <div class="box-header with-border">
        <a href="@Model.CreateUserUrl" class="btn btn-default"><i class="fa fa-plus"></i> Create</a>

        <div class="box-tools pull-right">

        </div>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <table id="users-table" class="table table-bordered table-responsive table-hover">
                    <thead>
                        <tr>
                            <th width="50">Avatar</th>
                            <th>First name</th>
                            <th>Last name</th>
                            <th>Birth date</th>
                            <th>Budget (₾)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.UserGridItems)
                        {
                            <tr>
                                <td>
                                    @if(item.HasAvatar)
                                    {
                                        <img class="img-circle" src="@item.Avatar" height="50" width="50" alt="" />
                                    }
                                </td>
                                <td>@item.FirstName</td>
                                <td>@item.LastName</td>
                                <td>@item.BirthDate</td>
                                <td>@item.Budget</td>
                                <td>
                                    <a href="@item.UpdateUrl" class="btn btn-xs btn-warning"> <i class="fa fa-pencil"></i> Edit</a>
                                    <a href="@item.DeleteUrl" class="btn btn-xs btn-danger delete-btn"> <i class="fa fa-trash-o"></i> Delete</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section FooterSection {
    <script src="~/Content/plugins/dataTables/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/plugins/dataTables/js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/plugins/bootbox/bootbox.min.js"></script>
    <script src="~/Content/scripts/Users/Users.js"></script>
}
